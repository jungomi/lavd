{
  "name": "lavd",
  "version": "0.2.5",
  "description": "Log and Visualise Data",
  "repository": "https://github.com/jungomi/lavd",
  "author": "Michael Jungo <michaeljungo92@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "vite build --sourcemap --out-dir py/lavd/static",
    "watch": "vite build --watch --sourcemap --out-dir py/lavd/static",
    "lint": "eslint js/ --ext .js,.ts,.tsx ",
    "type-check": "tsc --noEmit",
    "fix": "eslint js/ --ext .js,.ts,.tsx --fix",
    "lint-python": "flake8 py/",
    "type-check-python": "mypy py/ setup.py --ignore-missing-imports",
    "fmt-check-python": "black --check py/ setup.py",
    "fix-python": "black py/ setup.py",
    "watch-python": "python -m py.lavd.server --debug",
    "build-python": "python -m build .",
    "build-package": "yarn clean && yarn build && yarn build-python",
    "check-all": "yarn lint && yarn type-check && yarn lint-python && yarn type-check-python && yarn fmt-check-python",
    "clean": "rimraf build dist py/lavd/static py/lavd/version.py",
    "postinstall": "rimraf node_modules/hookrouter/dist/index.d.ts"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version"
  ],
  "devDependencies": {
    "@types/diff": "^5.0.1",
    "@types/hookrouter": "^2.2.5",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "node-gyp": "^8.2.0",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3",
    "vite": "^2.5.7"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.1",
    "diff": "^5.0.0",
    "emotion-reset": "^3.0.1",
    "github-markdown-css": "^4.0.0",
    "hookrouter": "^1.2.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.0.1",
    "remark-gfm": "^2.0.0"
  }
}
