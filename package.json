{
  "name": "lavd",
  "version": "0.2.1",
  "description": "Log and Visualise Data",
  "repository": "https://github.com/jungomi/lavd",
  "author": "Michael Jungo <michaeljungo92@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html --public-url / --out-dir py/lavd/static",
    "watch": "parcel watch index.html --public-url / --out-dir py/lavd/static",
    "lint": "eslint js/ --ext .js,.ts,.tsx ",
    "type-check": "tsc --noEmit",
    "fix": "eslint js/ --ext .js,.ts,.tsx --fix",
    "lint-python": "flake8 py/",
    "type-check-python": "mypy py/ setup.py --ignore-missing-imports",
    "fmt-check-python": "black --check py/ setup.py",
    "fix-python": "black py/ setup.py",
    "watch-python": "python -m py.lavd.server --debug",
    "build-python": "python -m pep517.build .",
    "build-package": "yarn clean && yarn build && yarn build-python",
    "check-all": "yarn lint && yarn type-check && yarn lint-python && yarn type-check-python && yarn fmt-check-python",
    "clean": "rimraf build dist py/lavd/static py/lavd/version.py"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version"
  ],
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/hookrouter": "^2.2.2",
    "@types/node": "^14.0.24",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-hooks": "^4.0.8",
    "node-gyp": "^8.2.0",
    "parcel": "^1.12.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "diff": "^4.0.2",
    "emotion": "^10.0.27",
    "emotion-reset": "^2.0.7",
    "github-markdown-css": "^4.0.0",
    "hookrouter": "^1.2.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1"
  }
}
